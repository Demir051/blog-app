<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/head",title) %>
</head>

<body>
    <%- include("../partials/navbar") %>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-4 mx-auto">
                <form method="post">
                    
                    <% if (typeof message != "undefined") { %>

                    <div class="form-group mb-3 alert alert-<%= alert %>" role="alert">
                        <%= message %>
                    </div>

                    <% } %>

                    <% if (message == "undefined" && alert == "undefined" ) { %>

                        <input type="hidden" value="default-alert-message" name="default">

                    <% } %>
        
                    <div class="form-group mb-3">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" name="email">
                    </div>
                    <div class="form-group mb-3">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" name="password">
                    </div>
                    <div class="form-group mb-3">
                        <button type="submit" class="btn btn-primary">Login</button>
                        <a href="reset-password" class="btn btn-link">Parola Sıfırla</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

</html>
