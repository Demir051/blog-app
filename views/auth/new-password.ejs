<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/head",title) %>
</head>

<body>
    <%- include("../partials/navbar") %>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-4 mx-auto">
                <form method="post" action="/account/new-password">

                    <input type="hidden" name="userId" value="<%= userId %>">
                    <input type="hidden" name="token" value="<%= token %>">

                    <% if (typeof message != "undefined") { %>

                    <div class="form-group mb-3 alert alert-<%= alert %>" role="alert">
                        <%= message %>
                    </div>

                    <% } %>


                    <div class="form-group mb-3">
                        <label for="password">Password</label>
                        <input type="text" class="form-control" id="password" name="password1">
                    </div>
                    <div class="form-group mb-3">
                        <label for="password">Password Again</label>
                        <input type="text" class="form-control" id="password" name="password2">
                    </div>
                    <div class="form-group mb-3">
                        <button type="submit" class="btn btn-primary">Update Password</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

</html>
